# Not called `.tf` as terraform-docs and actions docs are fighting for the README
# Neither have a good way to ignore

terraform {

  backend "s3" {
    encrypt = true
  }

  required_version = ">= 1.3.0" # Adjust Terraform version as needed
}


# Two provider configurations are needed to create resources in two different regions
provider "aws" {
  region = var.cluster_1_region
  alias  = "cluster_1"
}

provider "aws" {
  region = var.cluster_2_region
  alias  = "cluster_2"
}

#### Variables

variable "cluster_1_region" {
  description = "Region of the cluster 1"
  default     = "us-east-1"
  type        = string
}

variable "cluster_2_region" {
  description = "Region of the cluster 2"
  default     = "us-east-2"
  type        = string
}
